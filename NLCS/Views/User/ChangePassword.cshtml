@model NLCS.ViewModels.ChangePasswordVM

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_layoutCommon.cshtml";
}
<style>
    .input-custom{
        border-radius: 8px;
        margin-bottom: 5%;
    }
</style>

<h1 class="text-center" style="margin-top: 2%" >Đổi mật khẩu</h1>
<hr />
<div class="row" >
    <div class="col-md-4" style="margin-left: auto;margin-right: auto;height: 57vh;padding: 30px;}">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label">Mật khẩu cũ</label>
                <input asp-for="OldPassword" class="form-control input-custom" type="password" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">Mật khẩu mới</label>
                <input asp-for="NewPassword" class="form-control input-custom" type="password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label">Nhập lại mật khẩu mới</label>
                <input asp-for="ConfirmPassword" class="form-control input-custom" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary input-custom" />
            </div>
            <h5 class="text-danger">@ViewBag.PasswordIsIncorrect</h5>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

