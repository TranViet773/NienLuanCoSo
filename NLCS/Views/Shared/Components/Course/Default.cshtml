@model IEnumerable<NLCS.Models.Entities.Subject>
@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
        <div class="course-item bg-light d-flex flex-column">
            <div class="position-relative overflow-hidden" style="height: 200px;">
                <img class="img-fluid w-100" src="@Url.Content(item.Subject_Image)" alt="" style="height: 100%; object-fit: cover;">
                <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                    <a href="@Url.Action("getCourseById","Course", new { id = item.Subject_Id})" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Xem chi tiết</a>
                    <a href="#" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Đăng ký</a>
                </div>
            </div>
            <div class="text-center p-4 pb-0 flex-grow-1 d-flex flex-column justify-content-between">
                <h5 class="mb-4">@item.Subject_Name</h5>
            </div>
            <div class="d-flex border-top">
                <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary me-2"></i>@item.Subject_Place</small>
                <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@item.Subject_Time ngày</small>
                <small class="flex-fill text-center py-2"><i class="fa fa-user text-primary me-2"></i>@item.Subject_Quantity Học viên</small>
            </div>
        </div>
    </div>
}
