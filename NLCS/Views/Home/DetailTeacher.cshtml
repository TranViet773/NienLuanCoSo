@model NLCS.ViewModels.TeacherVM

@{
    ViewData["Title"] = "DetailTeacher";
    Layout = "~/Views/Shared/_layoutCommon.cshtml";
}
<style>

</style>
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp animated slideInDown" data-wow-delay="0.1s" style="min-height: 400px;">
                <div class="position-relative h-100" style="width: 70%;margin-left: 20%;">
                    <img class="img-fluid position-absolute w-100 h-100" src="@Model.Teacher_Image" alt="" style="object-fit: cover;">
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp animated slideInDown" data-wow-delay="0.3s">
                <h6 class="section-title bg-white text-start text-primary pe-3">@Model.Teacher_Degree</h6>
                <h1 class="mb-4">@Model.Teacher_Name</h1>
                <div class="row gy-2 gx-4 mb-4">
                    <div class="">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Email: @Model.Teacher_Email</p>
                    </div>
                    <div class="">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Số điện thoại: @Model.Teacher_PhoneNumber</p>
                    </div>
                    <div class="">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Khoa: @Model.Faculty_Name</p>
                    </div>
                    <div class="">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Giảng dạy: 
                            <ul>
                                @foreach (var item in Model.Subjects)
                                {
                                    <li><a href="@Url.Action("getCourseById", "Course", new {id = item.Subject_Id})">@item.Subject_Name</a></li>
                                }
                            </ul>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

