@model NLCS.Areas.Admin.ViewModels.TeacherVM

@{
    ViewData["Title"] = "EditTeacher";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    body {
        background: -webkit-linear-gradient(left, #3931af, #00c6ff);
    }

    .emp-profile {
        padding: 3%;
        margin-top: 3%;
        margin-bottom: 3%;
        border-radius: 0.5rem;
        background: #fff;
    }

    .profile-img {
        text-align: center;
    }

        .profile-img img {
            width: 50%;
            height: 100%;
        }

    .profile-head h5 {
        color: #333;
    }

    .profile-head h6 {
        color: #0062cc;
    }

    .profile-edit-btn {
        border: none;
        border-radius: 1.5rem;
        width: 70%;
        padding: 2%;
        font-weight: 600;
        color: #6c757d;
        cursor: pointer;
    }

    .profile-tab label {
        font-weight: 600;
    }

    .profile-tab input {
        margin-top: 0.5em;
    }
    .margin-top{
        margin-top: 1.5em;
    }

    .custom-select {
        position: relative;
        display: inline-block;
    }

        .custom-select select {
            appearance: none; /* Tắt kiểu dáng mặc định */
            -moz-appearance: none; /* Firefox */
            -webkit-appearance: none; /* Safari */
            padding-right: 30px; /* Để tạo khoảng cho mũi tên */
        }

        .custom-select::after {
            content: "▼"; /* Mũi tên xuống */
            position: absolute;
            right: 10px; /* Khoảng cách từ bên phải */
            top: 50%; /* Căn giữa theo chiều dọc */
            transform: translateY(-50%); /* Căn giữa hoàn hảo */
            pointer-events: none; /* Không cho phép tương tác với mũi tên */
            font-size: 14px; /* Kích thước của mũi tên */
            color: #333; /* Màu sắc của mũi tên */
        }

</style>

<div class="container emp-profile">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="@Url.Content(Model.Teacher_Image_string)" alt="" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        @Model.Teacher_Name
                    </h5>
                    <h6>
                        @Model.Teacher_Email
                    </h6>
                    <label>Vai trò Trưởng Khoa:</label>
                    <input type="checkbox" asp-for="IsAdmin"/></br>
                    <label>Khóa tài khoản</label>
                    <input type="checkbox" asp-for="isActive"/></br>
                    <label>Chọn ảnh đại diện:</label>
                    <input type="file" asp-for="Teacher_Image" />
                </div>
            </div>
            <div class="col-md-2">
                <input type="submit" class="profile-edit-btn" value="Save Changes" />
            </div>
        </div>
        <div class="row" style="margin-left: 1.9em; padding-top: 30px;">
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6 margin-top">
                                <label asp-for="Teacher_Id">Mã cán bộ</label>
                                <input asp-for="Teacher_Id" class="form-control" readonly />
                                <span asp-validation-for="Teacher_FacultyID"></span>
                            </div>
                            <div class="col-md-6 margin-top">
                                <label asp-for="Teacher_Name">Tên Giảng viên</label>
                                <input asp-for="Teacher_Name" class="form-control" />
                                <span asp-validation-for="Teacher_FacultyID"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 margin-top">
                                <label asp-for="Teacher_Degree">Học hàm - Học vị</label>
                                <select asp-for="Teacher_Degree" class="form-control" asp-items="Model.Degrees"></select>
                                <span asp-validation-for="Teacher_FacultyID"></span>
                            </div>
                            <div class="col-md-6 margin-top">
                                <label asp-for="Teacher_Email">Email</label>
                                <input asp-for="Teacher_Email" class="form-control" />
                                <span asp-validation-for="Teacher_FacultyID"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 margin-top">
                                <label asp-for="Teacher_PhoneNumber">Số điện thoại</label>
                                <input asp-for="Teacher_PhoneNumber" class="form-control" />
                                <span asp-validation-for="Teacher_FacultyID"></span>
                            </div>
                            @* <div class="col-md-6 margin-top">
                                <label asp-for="Teacher_FacultyID">Khoa trực thuộc</label>
                                <input asp-for="Teacher_FacultyID" class="form-control" />
                            </div> *@
                            <div class="col-md-6 margin-top">
                                <label for="Teacher_FacultyID">Khoa: </label>
                                <select asp-for="Teacher_FacultyID" asp-items="ViewBag.Faculties" class="form-control custom-select">
                                    <option value="">Chọn Khoa</option>
                                </select>
                                <span asp-validation-for="Teacher_FacultyID"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 margin-top">
                                <label asp-for="Teacher_Username">Tên đăng nhập</label>
                                <input asp-for="Teacher_Username" class="form-control" />
                                <span asp-validation-for="Teacher_Username"></span>
                            </div>
                            <div class="col-md-6 margin-top">
                                <label asp-for="Teacher_Password">Mật khẩu</label>
                                <input asp-for="Teacher_Password" type="text" class="form-control" />
                                <span asp-validation-for="Teacher_Password"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
