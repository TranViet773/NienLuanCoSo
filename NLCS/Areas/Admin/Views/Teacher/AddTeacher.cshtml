@model NLCS.Areas.Admin.ViewModels.TeacherVM

@{
    ViewData["Title"] = "AddTeacher";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Thay đổi kích thước cột và căn giữa form -->
            <form class="border p-4 rounded-5 signin-form" asp-action="AddTeacher" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <h2 class="text-center mb-4">Thêm Tài Khoản Giảng Viên mới</h2>
                </div>

                <!-- Mã Cán bộ và Tên Giảng viên cùng một hàng -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="Id" class="form-label">Mã Cán bộ</label>
                        <input type="text" class="form-control rounded-5" id="Id" asp-for="Teacher_Id">
                        <span asp-validation-for="Teacher_Id" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="tname" class="form-label">Tên Giảng viên</label>
                        <input type="text" class="form-control rounded-5" id="tname" asp-for="Teacher_Name">
                        <span asp-validation-for="Teacher_Name" class="text-danger"></span>
                    </div>
                </div>

                <!-- Tên đăng nhập và Mật khẩu cùng một hàng -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="username" class="form-label">Tên đăng nhập</label>
                        <input type="text" class="form-control rounded-5" id="username" asp-for="Teacher_Username">
                        <span asp-validation-for="Teacher_Username" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="password" class="form-label">Mật Khẩu</label>
                        <input type="password" class="form-control rounded-5" id="password" asp-for="Teacher_Password">
                        <span asp-validation-for="Teacher_Password" class="text-danger"></span>
                    </div>
                </div>

                <!-- Học hàm - Học vị và Số điện thoại cùng một hàng -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="td" class="form-label">Học hàm - Học vị</label>
                        <input type="text" class="form-control rounded-5" id="td" asp-for="Teacher_Degree">
                        <span asp-validation-for="Teacher_Degree" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="sdt" class="form-label">Số điện thoại</label>
                        <input type="tel" class="form-control rounded-5" id="sdt" asp-for="Teacher_PhoneNumber">
                        <span asp-validation-for="Teacher_PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control rounded-5" id="email" asp-for="Teacher_Email">
                    <span asp-validation-for="Teacher_Email" class="text-danger"></span>
                </div>

                <!-- Hình ảnh -->
                <div class="mb-3">
                    <label for="image" class="form-label">Hình ảnh</label>
                    <input type="file" class="form-control rounded-5" id="image" asp-for="Teacher_Image">
                    <span asp-validation-for="Teacher_Image" class="text-danger"></span>
                </div>

                <!-- Khoa -->
                <div class="mb-3">
                    <label for="Teacher_FacultyID" class="form-label">Khoa: Chọn khoa</label>
                    <select asp-for="Teacher_FacultyID" asp-items="ViewBag.Faculties" class="form-control rounded-5">
                        <option value="">-- Chọn khoa --</option>
                    </select>
                    <span asp-validation-for="Teacher_FacultyID"></span>
                </div>

                <!-- Tài khoản Trưởng Khoa -->
                <div class="mb-3">
                    <label for="isAdmin" class="form-label">Tài khoản Trưởng Khoa</label>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="isAdmin" asp-for="IsAdmin">
                        <label class="form-check-label" for="isAdmin">Có quyền Trưởng Khoa</label>
                    </div>
                    <span asp-validation-for="IsAdmin" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary m-2 d-block mx-auto">Lưu</button>
            </form>
        </div>
    </div>
</div>
